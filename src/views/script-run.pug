extends layout-with-browser

append headers
    script(src="/public/js/path.js")
    script(src="/public/js/script-run.js")
    script.
        window.addEventListener( "load", function() {
                
            var runDetail = { nextIterationURL: "#{nextIterationURL}", scripts: !{pathScripts} };
            document.dispatchEvent( new CustomEvent( "initiate-script", { detail: runDetail } ) );
            
        } );

prepend content
    div(class="run-counter")
        | Completed runs:
        span(class="run-count")= iteration
    
    label
        input(type="checkbox",id="stop")
        span(class="checkbox-label")= "Pause after this iteration"
    a(href=nextIterationURL,class="next-iteration")= "Proceed to next iteration..."
    
    h3= "Paths"        
    div(id="script-outcome", class="outcome")
    ol(id="script-transcript", class="transcript")        
    h3= "Steps"
    div(id="outcome", class="outcome")
    ol(id="transcript", class="transcript")
    