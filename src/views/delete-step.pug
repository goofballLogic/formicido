mixin args( args )
    each fieldDef in args
        +field( fieldDef )
        
append content
    h2= "Delete step"
    |ID: #{step.id}
    h3 #{step.name}
    each val, key in step.args
        div(class="arg")
            span(class="arg-label")= key
            span(class="arg-values")= val
        
