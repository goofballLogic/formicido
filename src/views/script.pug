extends layout
include mixins/check-box-list

prepend content
    h2= script.name
    form(method="POST")
        label
            span(class="label-text")= "Name"
            input(name="script-name",value=script.name)
        label
            span(class="label-text")= "Paths"
            +checkboxlist( pathList, "path" )
        button= "Save"
    a(href=newRunUrl)= "New run..."
